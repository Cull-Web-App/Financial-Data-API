    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "outFiles": [
                "${workspaceFolder}/distlib/src/server/koa/index.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Lambda Application",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug-lambda"
            ],
            "port": 5858
        }
    ]
}